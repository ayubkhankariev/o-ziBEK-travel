generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            Int       @id @default(autoincrement())
  name          String
  email         String    @unique
  password_hash String
  country       String?
  created_at    DateTime  @default(now())
  
  bookingsStay       BookingStay[]
  bookingsAttraction BookingAttraction[]
  photos             Photo[]
  favorites          Favorite[]
}

model Stay {
  id              Int      @id @default(autoincrement())
  name            String
  city            String
  type            String   // hotel, hostel, guesthouse, resort, apartment
  price_per_night Float
  address         String
  description     String
  rating          Float    @default(0)
  amenities       String   // Stored as JSON string or comma separated
  images          String   // Stored as JSON string of URLs
  latitude        Float
  longitude       Float

  bookings  BookingStay[]
  favorites Favorite[]
}

model Attraction {
  id               Int      @id @default(autoincrement())
  name             String
  city             String
  category         String   // Historical, Cultural, Nature, etc.
  description      String
  recommended_time String
  best_time        String
  rating           Float    @default(0)
  images           String   // Stored as JSON string
  latitude         Float
  longitude        Float

  bookings  BookingAttraction[]
  photos    Photo[]
  favorites Favorite[]
}

model BookingStay {
  id               Int      @id @default(autoincrement())
  user_id          Int
  stay_id          Int
  check_in         DateTime
  check_out        DateTime
  guests           Int
  special_requests String?
  status           String   @default("pending") // pending, confirmed, cancelled

  user User @relation(fields: [user_id], references: [id])
  stay Stay @relation(fields: [stay_id], references: [id])
}

model BookingAttraction {
  id            Int      @id @default(autoincrement())
  user_id       Int
  attraction_id Int
  date          DateTime
  time          String
  people        Int
  comment       String?
  status        String   @default("pending")

  user       User       @relation(fields: [user_id], references: [id])
  attraction Attraction @relation(fields: [attraction_id], references: [id])
}

model Photo {
  id            Int      @id @default(autoincrement())
  user_id       Int
  attraction_id Int?
  city          String
  caption       String?
  image_url     String
  isApproved    Boolean  @default(false)
  created_at    DateTime @default(now())

  user       User        @relation(fields: [user_id], references: [id])
  attraction Attraction? @relation(fields: [attraction_id], references: [id])
}

model Favorite {
  id            Int    @id @default(autoincrement())
  user_id       Int
  stay_id       Int?
  attraction_id Int?
  
  user       User        @relation(fields: [user_id], references: [id])
  stay       Stay?       @relation(fields: [stay_id], references: [id])
  attraction Attraction? @relation(fields: [attraction_id], references: [id])
}
